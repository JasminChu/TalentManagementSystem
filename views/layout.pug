    script.
        function capitalize(string) {
            let capitalizedString = "";
            if (string === "it" || string === "mad") {
                capitalizedString = string.toUpperCase();
            } else {
                capitalizedString = string.charAt(0).toUpperCase() + string.slice(1);
            }
            return capitalizedString;
        }

        var department1 = capitalize(!{JSON.stringify(department)});

        let departmentDisplayArray = document.getElementsByClassName("departmentDisplay");

        for (var i = 0; i < departmentDisplayArray.length; i++) {
            departmentDisplayArray[i].innerHTML = department1;
        }



